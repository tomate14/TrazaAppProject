<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.maxi.tpoperativa.SendActivity">

    <TextView
        android:id="@+id/id_destino"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Destino:"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="21dp" />

    <Spinner
        android:id="@+id/spinner_destino"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:background="@android:drawable/btn_dropdown"
        app:layout_constraintLeft_toRightOf="@+id/id_destino"
        tools:layout_editor_absoluteY="12dp" />

    <TextView
        android:id="@+id/id_recurso"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="37dp"
        android:text="Recurso:"
        app:layout_constraintTop_toBottomOf="@+id/id_destino"
        tools:layout_editor_absoluteX="1dp" />

    <Spinner
        android:id="@+id/spinner_recurso"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:background="@android:drawable/btn_dropdown"
        app:layout_constraintLeft_toRightOf="@+id/id_recurso"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_destino" />

    <TextView
        android:id="@+id/id_Track"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:text="Track Nro:"
        app:layout_constraintTop_toBottomOf="@+id/id_recurso"
        tools:layout_editor_absoluteX="1dp" />

    <EditText
        android:id="@+id/edit_track"
        android:layout_width="186dp"
        android:layout_height="40dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="12dp"
        android:background="@android:drawable/editbox_background"
        android:inputType="textPersonName"
        android:text="Track Numero"
        app:layout_constraintTop_toBottomOf="@+id/spinner_recurso"
        app:layout_constraintLeft_toRightOf="@+id/id_Track"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/id_descripcion"
        android:layout_width="80dp"
        android:layout_height="22dp"
        android:layout_marginTop="31dp"
        android:text="Descripcion:"
        app:layout_constraintTop_toBottomOf="@+id/id_Track"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/idbtn_confirmar"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Confirmar"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_descripcion" />

    <EditText
        android:id="@+id/edit_descripcion"
        android:layout_width="185dp"
        android:layout_height="36dp"
        android:layout_marginTop="25dp"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Descipcion"
        app:layout_constraintTop_toBottomOf="@+id/edit_track"
        app:layout_constraintLeft_toRightOf="@+id/id_descripcion"
        android:layout_marginLeft="29dp" />
</android.support.constraint.ConstraintLayout>
